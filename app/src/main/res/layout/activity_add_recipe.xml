<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_recipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.a5_designs.recipefinder.AddRecipeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText_descr"
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Short Description"
            android:layout_below="@+id/textView5"
            android:background="@color/background"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp" />

        <EditText
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ingredient"
            android:hint="Ingredient"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_below="@+id/textView6"
            android:background="@color/background"
            android:layout_toLeftOf="@+id/quantity"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:text="Name "
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView5"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:text="Ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_below="@+id/editText_descr"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold"
            android:layout_toLeftOf="@+id/add_ingredients_button"
            android:layout_toStartOf="@+id/add_ingredients_button" />

        <TextView
            android:text="Preperation Steps "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView8"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_prep"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView11"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/editText_categName"
            android:layout_toStartOf="@+id/add_categories_button"
            android:hint="Categorie Name"
            android:background="@color/background"
            android:layout_toLeftOf="@+id/add_categories_button"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_name"
            android:hint="Recipe Name "
            android:background="@color/background"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText_prep"
            android:hint="Step1, Step 2, ..."
            android:background="@color/background"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayoutCateg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView12"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="80dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quantity"
            android:hint="Quantity"
            android:background="@color/background"
            android:layout_below="@+id/textView6"
            android:layout_toLeftOf="@+id/add_ingredients_button"
            android:layout_toStartOf="@+id/add_ingredients_button"
            android:layout_height="wrap_content" />

        <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:id="@+id/add_categories_button"
            android:backgroundTint="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_height="45dp"
            android:layout_alignBaseline="@+id/editText_categName"
            android:layout_alignBottom="@+id/editText_categName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Add"
            android:id="@+id/add_ingredients_button"
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@+id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/quantity"
            android:layout_alignBaseline="@+id/quantity"
            android:layout_height="45dp" />

        <Button
            android:text="Add Recipe"
            android:id="@+id/add_recipe_button"
            android:layout_below="@+id/editText_photo"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/add_categories_button"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:layout_centerInParent="true"/>

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_photo"
            android:hint="http://www.hello.com/myawesomephoto.jpg"
            android:background="@color/background"
            android:layout_height="35dp"
            android:layout_below="@+id/textView12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout"
            android:layout_marginBottom="10dp"
            android:stretchColumns="1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/add_ingredients_button">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayoutCateg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:stretchColumns="0"
            android:layout_below="@+id/editText_categName">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>


    </RelativeLayout>

</ScrollView>

